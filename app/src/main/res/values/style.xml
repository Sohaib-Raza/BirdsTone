<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
    </style>

    <style name="SettingImage">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:tint">@color/icon_color</item>
    </style>


    <style name="SettingTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_marginStart">@dimen/_7sdp</item>
        <item name="android:layout_marginEnd">@dimen/_7sdp</item>
    </style>

    <style name="SettingLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>


    <style name="RingtoneImage">
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
     </style>

</resources>